<Window x:Class="CSWPFCamera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <StackPanel Width="150" Background="Black"  >
            <Label Content="カメラ一覧" Foreground="White"/>
            <ListBox x:Name="listBox1" MinHeight="150" Margin="5" DisplayMemberPath="Name" 
                     SelectionChanged="listBox1_SelectionChanged"/>
            <Button Content="Capture" Margin="5" Click="Button_Click"/>
        </StackPanel>
        <Grid Background="White">
            <Image x:Name="image1" />
        </Grid>
    </DockPanel>
</Window>
